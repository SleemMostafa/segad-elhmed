@page "/"

<PageTitle>Carpet Stock Management</PageTitle>

<div class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">
                    <span class="text-gradient">Carpet Stock</span><br/>
                    Management System
                </h1>
                <p class="lead text-muted mb-4">
                    Streamline your inventory with our modern, easy-to-use carpet management platform.
                    Track stock, manage categories, and optimize your business workflow.
                </p>
                <div class="d-flex gap-3">
                    <a href="/carpets" class="btn btn-primary btn-lg">
                        <i class="bi bi-grid-3x3-gap-fill me-2"></i>View Inventory
                    </a>
                    <a href="/categories/create" class="btn btn-outline-primary btn-lg">
                        <i class="bi bi-plus-circle me-2"></i>Add Category
                    </a>
                </div>
            </div>
            <div class="col-lg-6 d-none d-lg-block">
                <div class="hero-illustration">
                    <i class="bi bi-box-seam" style="font-size: 15rem; color: var(--primary-light); opacity: 0.2;"></i>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="fw-bold mb-3">Key Features</h2>
        <p class="text-muted">Everything you need to manage your carpet inventory efficiently</p>
    </div>

    <div class="row g-4">
        <div class="col-md-6 col-lg-3">
            <div class="feature-card">
                <div class="feature-icon bg-primary">
                    <i class="bi bi-folder-fill"></i>
                </div>
                <h5 class="mt-3 mb-2">Category Management</h5>
                <p class="text-muted small">Organize carpets into customizable categories for better inventory organization</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="feature-card">
                <div class="feature-icon bg-success">
                    <i class="bi bi-calculator-fill"></i>
                </div>
                <h5 class="mt-3 mb-2">Auto Calculations</h5>
                <p class="text-muted small">Automatic area and price calculations based on dimensions and pricing rules</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="feature-card">
                <div class="feature-icon bg-warning">
                    <i class="bi bi-graph-up-arrow"></i>
                </div>
                <h5 class="mt-3 mb-2">Stock Tracking</h5>
                <p class="text-muted small">Real-time stock monitoring with visual indicators and low-stock alerts</p>
            </div>
        </div>

        <div class="col-md-6 col-lg-3">
            <div class="feature-card">
                <div class="feature-icon bg-info">
                    <i class="bi bi-lightning-charge-fill"></i>
                </div>
                <h5 class="mt-3 mb-2">Fast & Easy</h5>
                <p class="text-muted small">Intuitive interface designed for quick data entry and efficient workflow</p>
            </div>
        </div>
    </div>

    <div class="stats-section mt-5">
        <div class="row text-center">
            <div class="col-md-4">
                <div class="stat-card">
                    <i class="bi bi-speedometer2"></i>
                    <h3 class="fw-bold mb-1">Fast</h3>
                    <p class="text-muted">Lightning-fast performance</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <i class="bi bi-shield-check"></i>
                    <h3 class="fw-bold mb-1">Reliable</h3>
                    <p class="text-muted">Built with .NET 9.0</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="stat-card">
                    <i class="bi bi-heart-fill"></i>
                    <h3 class="fw-bold mb-1">Easy</h3>
                    <p class="text-muted">User-friendly interface</p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .hero-section {
        padding: 4rem 0;
        background: linear-gradient(135deg, rgba(102, 126, 234, 0.05) 0%, rgba(118, 75, 162, 0.05) 100%);
        border-radius: 20px;
        margin: 1rem;
    }

    .text-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .hero-illustration {
        text-align: center;
    }

    .feature-card {
        background: white;
        padding: 2rem;
        border-radius: 16px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        height: 100%;
        text-align: center;
    }

    .feature-card:hover {
        transform: translateY(-8px);
        box-shadow: 0 12px 24px rgba(102, 126, 234, 0.15);
    }

    .feature-icon {
        width: 70px;
        height: 70px;
        border-radius: 16px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        font-size: 2rem;
        color: white;
    }

    .feature-icon.bg-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .feature-icon.bg-success {
        background: linear-gradient(135deg, #4ade80 0%, #22c55e 100%);
    }

    .feature-icon.bg-warning {
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
    }

    .feature-icon.bg-info {
        background: linear-gradient(135deg, #60a5fa 0%, #3b82f6 100%);
    }

    .stat-card {
        padding: 2rem;
        background: white;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
    }

    .stat-card i {
        font-size: 3rem;
        color: var(--primary-color);
        margin-bottom: 1rem;
    }
</style>